{
  "name": "tuture",
  "version": "0.3.1",
  "preferGlobal": true,
  "description": "Tuture magically turns your repositories into juicy tutorials.",
  "license": "MIT",
  "main": "index.js",
  "keywords": [
    "tutorial",
    "step-by-step",
    "learn-by-doing",
    "git"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tutureproject/tuture.git"
  },
  "bugs": {
    "url": "https://github.com/tutureproject/tuture/issues"
  },
  "homepage": "https://github.com/tutureproject/tuture#readme",
  "bin": {
    "tuture-server": "./index.js"
  },
  "dependencies": {
    "@types/classnames": "^2.2.4",
    "@types/express": "^4.16.0",
    "@types/js-yaml": "^3.11.2",
    "@types/prismjs": "^1.9.0",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "@types/react-helmet": "^5.0.6",
    "@types/react-svg": "^3.0.0",
    "chalk": "^2.4.1",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^4.5.1",
    "cross-spawn": "^6.0.5",
    "css-loader": "^0.28.11",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "js-yaml": "^3.12.0",
    "opn": "^5.3.0",
    "prismjs": "^1.15.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-helmet": "^5.2.0",
    "react-markdown": "^3.3.4",
    "react-svg": "^4.1.8",
    "style-loader": "^0.21.0",
    "styled-components": "^3.3.2",
    "ts-loader": "^4.4.1",
    "typescript": "^2.9.1",
    "url-loader": "^1.0.1",
    "watchpack": "^1.6.0",
    "webpack": "^4.12.0",
    "webpack-dev-server": "2.9.4"
  },
  "scripts": {
    "start": "concurrently \"webpack -w\" \"nodemon dist/js/server.js\"",
    "build": "webpack --mode=production",
    "dev": "TUTURE_PATH=example/en npm start",
    "dev:cn": "TUTURE_PATH=example/cn npm start",
    "test": "jest",
    "lint": "tslint 'src/**/*.{ts,tsx,js}' --project tsconfig.json",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "./**/*.{ts,tsx,js,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^23.1.0",
    "@types/react-test-renderer": "^16.0.1",
    "concurrently": "^3.6.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.13.6",
    "react-test-renderer": "^16.4.1",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "webpack-cli": "^3.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg)$": "<rootDir>/src/components/tests/config/empty-module.js"
    },
    "setupFiles": [
      "./src/components/tests/config/env.js"
    ],
    "setupTestFrameworkScriptFile": "./src/components/tests/config/enzyme-adapter.js"
  }
}
