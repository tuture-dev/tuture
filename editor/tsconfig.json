{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "target": "es5",
    "lib": ["dom", "es7"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "build/dist",
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
